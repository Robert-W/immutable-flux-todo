$darkGrayShadow = rgba(55, 55, 55, 0.3)
$checkmarkFill = #00ffff
$footerFontColor = #888
$darkFontColor = #777
$closeFill = #ff1744
$rowEmHeight = 25px
$lightGray = #ddd
$downFill = #eee

*
*:before
*:after
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-font-smoothing antialiased
  box-sizing border-box

.pointer
  cursor pointer

.todo-app
  background-color $lightGray
  flex-direction column
  display flex

.todo-app-header
  margin 20px auto
  font-weight 500
  font-size 80px

.todo-app-footer
  color $footerFontColor
  margin 20px auto
  font-size 11px
  & a
    color $footerFontColor
    text-decoration none
    &:hover
      text-decoration underline

.todo-notepad
  box-shadow 0 2px 4px $darkGrayShadow, 0 25px 50px $darkGrayShadow
  background-color white
  margin 0 auto
  width 550px

input
  -webkit-appearance none
  font-size $rowEmHeight
  border none
  height 100%
  width 100%
  &:focus
    outline none
    height 100%
    width 100%

.flex-row
  flex-direction row
  font-size $rowEmHeight
  display flex
  height 2em
  & *
    transition all 0.25s ease

.svg-icon-container
  min-width 50px
  display flex
  height 100%

.svg-icon
  margin auto
  height 20px
  width 20px

.todo-new-item
  border-bottom 1px solid darken($lightGray, 25)
  height 2em
  width 100%
  & .new-todo
    position relative
    font-size 22px
    height 100%
    width 100%
  & .icon-down-arrow
    fill $lightGray
  &.active
    & .icon-down-arrow
      fill darken($lightGray, 25)

.todo-edit-item
  border-bottom 1px solid $lightGray
  height 2em
  width 100%
  & .circle
    border 1px solid $lightGray
    border-radius 50%
    display flex
    margin auto
    height 30px
    width 30px
  & .icon-checkmark
    fill $lightGray
    height 15px
  & .edit-item
    font-weight 200
    font-size 20px
  & .icon-close
    visibility hidden
    fill $closeFill
  &:hover .icon-close
    visibility visible
  &:hover .icon-close:hover
    fill darken($closeFill, 20)
  &.active
    & .circle
      border 1px solid darken($lightGray, 25)
    & .icon-checkmark
      fill darken($checkmarkFill, 5)
    & .edit-item
      text-decoration line-through
      color $lightGray

.status-bar
  & button
    -webkit-appearance none
    color $darkFontColor
    background none
    outline none
    padding 5px
    border none
    &:hover
      box-shadow 0 0 5px darken($darkGrayShadow, 20)
    &:active
      box-shadow 0 0 15px $darkGrayShadow
  & .state-button
    border-radius 5px
    margin auto 7px
    padding 3px
  & .corner-item
    font-size 12px
    margin auto 0
    width auto
  & .remaining-count
    color $darkFontColor
    padding-left 10px
  & .filters
    justify-content center
    display flex
    height 100%
    width 100%
  & .filter-button
    padding 10px 15px
    margin auto 15px
  & .icon-previous
    transform rotate(90deg)
    fill $footerFontColor
  & .icon-next
    transform rotate(-90deg)
    fill $footerFontColor
  & .clear-button
    margin-right 5px
    text-align left
